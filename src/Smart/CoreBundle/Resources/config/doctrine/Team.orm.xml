<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping
	xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
	<entity name="Smart\CoreBundle\Entity\Team" table="team">
		<id name="id" type="integer" column="id">
			<generator strategy="AUTO" />
		</id>
		<field name="parentId" type="integer" column="parent_id" />
		<field name="name" type="string" column="name" length="255" />
		<field name="site" type="string" column="site" length="1000" />
		<field name="siteTypeId" type="integer" column="site_type_id" />
		<field name="sportClassId" type="integer" column="sport_class_id" />
		
        <many-to-one field="sportClass" target-entity="SportClass">
            <join-column name="sport_class_id" referenced-column-name="id" />
        </many-to-one>
	</entity>
</doctrine-mapping>